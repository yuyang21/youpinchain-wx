<view class="current">
  <swiper class="swiper" indicator-dots="true" autoplay="true" interval="1500" duration="1000" circular="true" indicator-color="#b5b5b5" indicator-active-color="#e4372e">
    <block wx:for="{{brand}}" wx:key="{{id}}">
      <swiper-item>
        <image src="{{item.pictureUrl}}" class="slide-image"/>
      </swiper-item>
    </block>
  </swiper>
  <view class="listul">
    <!-- <view bindtap="toDetail" data-group-suit-id="{{item.id}}"  wx:for="{{goOnList}}" wx:key="{{id}}" class="listli"> -->
    <navigator hover-class="none" hover-start-time="0" hover-stay-time="0" url="{{'../groupDet/groupDet?groupSuitId=' + item.id}}" wx:for="{{goOnList}}" wx:key="{{id}}" class="listli">
    <!-- <navigator hover-class="none" hover-start-time="0" hover-stay-time="0" url="../groupMy/groupMy?groupMyId=221" wx:for="{{goOnList}}" wx:key="{{id}}" class="listli"> -->
      <image src="{{item.normalPic}}" alt="" class="image"/>
      <view class="goods_info">
          <text class="name ellipsis">{{item.suitName}}</text>
          <text class="desr ellipsis">{{item.describe}}</text>
          <view class="left">
            <p class="price"><span class="lable">3人成团</span><span class="RMB">￥</span>{{item.minimumPrice}}</p>
          </view>
          <view class="right shopping_cart"><p>立即拼团</p></view>
      </view>
    </navigator>
    <view class="text-center loadText">
      <text hidden="{{!loading}}">正在加载中....</text>
      <text hidden="{{!loaded}}">到底喽，没有更多数据了...</text>
    </view>
  </view>
</view>
