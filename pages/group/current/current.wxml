<view class="current">
  <swiper class="swiper" indicator-dots="{{brand.length > 1}}" autoplay="true" interval="1500" duration="1000" circular="true" indicator-color="#b5b5b5" indicator-active-color="#e4372e">
    <block wx:for="{{brand}}" wx:key="{{id}}">
      <swiper-item>
        <image src="{{item.pictureUrl}}" class="slide-image"/>
      </swiper-item>
    </block>
  </swiper>
  <view class="listul">
    <navigator hover-class="none" hover-start-time="0" hover-stay-time="0" url="{{'../groupDet/groupDet?groupSuitId=' + item.id}}" wx:for="{{goOnList}}" wx:key="{{id}}" class="listli">
      <image mode='aspectFill' src="{{item.normalPic}}" alt="" class="image"/>
      <view class="goods_info">
          <text class="name ellipsis">{{item.suitName || item.name}}</text>
          <text class="desr ellipsis">{{item.describe}}</text>
          <view class="left">
            <view class="price"><span class="lable">拼团更划算</span><span class="RMB red">￥</span>{{item.minimumPrice || item.presentPrice}}</view>
          </view>
          <view class="right shopping_cart"><p>抢购</p></view>
      </view>
    </navigator>
    <navigator hover-class="none" hover-start-time="0" hover-stay-time="0" url="{{'../../goods/goods?productId=' + item.id + '&brandId=' + item.brandId}}" wx:for="{{productList}}" wx:key="{{id}}" class="listli">
      <image src="{{item.normalPic}}" alt="" class="image"/>
      <view class="goods_info">
          <text class="name ellipsis">{{item.name}}</text>
          <text class="desr ellipsis">{{item.describe}}</text>
          <view class="left">
            <view class="price"><span class="lable">拼团更划算</span><span class="RMB red">￥</span>{{item.presentPrice}}</view>
          </view>
          <view class="right shopping_cart"><p>抢购</p></view>
      </view>
    </navigator>
    <view class="text-center loadText">
      <text hidden="{{!loading}}">正在加载中....</text>
      <text hidden="{{!loaded}}">到底喽，没有更多数据了...</text>
    </view>
  </view>
</view>
