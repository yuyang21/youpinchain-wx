.address {
  width: 100%;
  margin-top: 108rpx;
  padding-bottom: 120rpx;
  min-height: 800rpx;
}

.addresslist .unavailable {
  background: url('../../../static/images/coupon1.jpg') no-repeat center center;
  background-size: 100% 100%;
}

.addresslist .li {
  margin: 32rpx 24rpx;
  padding: 42rpx 34rpx 50rpx 104rpx;
  display: flex;
  justify-content: space-between;
  border-radius: 20rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 28rpx 1.2px rgba(181, 184, 188, 0.4);
  position: relative;
  background: url('../../../static/images/coupon.jpg') no-repeat center center;
  background-size: 100% 100%;
}

.default-address {
  width: 86rpx;
  height: 84rpx;
  position: absolute;
  left: 0;
  top: 0;
  background: url('../../../static/images/add-slected.png') no-repeat center center;
  background-size: 100% 100%;
}

.address-detail {
  position: relative;
  display: flex;
  justify-content: space-between;
}

.address-detail text {
  float: left;
  line-height: 1.6;
  font-size: 30rpx;
  color: #fff;
}

.address-detail text span {
  display: inline-block;
  font-size: 30rpx;
  color: #fff;
}

.address-detail text:first-child {
  font-size: 90rpx;
  color: #fff;
}

.address-detail text:nth-of-type(1) {
  margin-bottom: 48rpx;
}

.deletesite {
  display: flex;
  align-items: center;
  width: 100rpx;
}

.deletesite span {
  display: block;
  width: 46rpx;
  height: 46rpx;
  margin-left: 40rpx;
  background: url('../../../static/images/icon-edit-nor.png') no-repeat center center;
  background-size: 100% 100%;
}

.no_address {
  font-size: 30rpx;
  color: #666;
  text-align: center;
  line-height: 1200rpx;
  background: #fff;
  position: fixed;
  bottom: 100rpx;
  width: 100%;
}

.addsite {
  background: #e4372e;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  bottom: 0;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  font-weight: bold;
}