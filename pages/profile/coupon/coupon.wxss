.address {
  margin: 30rpx 20rpx;
  padding-bottom: 120rpx;
  min-height: 800rpx;
}
.no-coupons text {
  font-size: 30rpx;
}
.addresslist .li {
  margin: 32rpx 0rpx;
  padding: 30rpx 0rpx 50rpx 40rpx;
  /* justify-content: space-between; */
  border-radius: 20rpx;
  /* background-color: #000; */
  /* box-shadow: 0 2rpx 28rpx 1.2px rgba(181, 184, 188, 0.4); */
  position: relative;
  height: 260rpx;
}
.addresslist .li .bg, .addresslist .unavailable {
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  width: 92%;
  height: 280rpx;
}

.addresslist span {
  margin-top:-129rpx;
}
.address-detail {
  position: relative;
  overflow:hidden;
  width: 85%;
  height:183rpx;
}

.address-detail text {
  float: left;
  line-height: 1.6;
  font-size: 30rpx;
  color: #fff;
}
.address-detail .right text {
  display: block;
  width:100%;
}

.address-detail text span {
  display: inline-block;
  font-size: 30rpx;
  color: #fff;
}

.address-detail .amount {
  font-size: 57rpx;
  color: #fff;
  font-weight:bold;
  margin:-12rpx 20rpx 0 60rpx;
}
.address-detail .right {
  width: 65%;
}
.address-detail .right .name {
  line-height: 1.25;
  min-height:68rpx;
}

.deletesite {
  display: flex;
  align-items: center;
  width: 100rpx;
}

.no_address {
  font-size: 30rpx;
  color: #666;
  text-align: center;
  line-height: 1200rpx;
  background: #fff;
  position: fixed;
  bottom: 100rpx;
  width: 100%;
}

.addsite {
  background: #e4372e;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  bottom: 0;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  font-weight: bold;
}

.unselected {
  border-radius: 50%;
  display: inline-block;
  border: 3rpx solid #999;
  width: 38rpx;
  height: 38rpx;
}
.choose image {
  display: inline-block;
  width: 38rpx;
  height: 38rpx;
  vertical-align:middle;
}
.validityOverTime {
  font-size: 28rpx;
  color: #666;
  position: absolute;
  bottom: 1rpx;
}