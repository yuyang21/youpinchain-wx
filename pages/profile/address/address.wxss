.address {
  width: 100%;
  padding-bottom: 120rpx;
  min-height: 800rpx;
}

.addresslist .li {
  margin: 32rpx 24rpx;
  padding: 42rpx 34rpx 50rpx 104rpx;
  display: flex;
  justify-content: space-between;
  border-radius: 20rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 28rpx 1.2px rgba(181, 184, 188, 0.4);
  position: relative;
}

.default-address {
  width: 86rpx;
  height: 84rpx;
  position: absolute;
  left: 0;
  top: 0;
  background: url('../../../static/images/add-slected.png') no-repeat center center;
  background-size: 100% 100%;
}

.address-detail {
  position: relative;
  width: 460rpx;
}
.address-detail image {
  content: '';
  position: absolute;
  left: -46rpx;
  top: 0;
  width: 32rpx;
  height: 44rpx;
}

.address-detail view {
  line-height: 1.6;
  font-size: 30rpx;
  color: #666;
}

.address-detail view span {
  display: inline-block;
  font-size: 30rpx;
  color: #666;
}

.address-detail view span:first-child {
  margin-right: 30rpx;
}

.address-detail view:nth-of-type(1) {
  margin-bottom: 48rpx;
}

.deletesite {
  display: flex;
  align-items: center;
  width: 100rpx;
}

.deletesite image {
  display: block;
  width: 46rpx;
  height: 46rpx;
  margin-left: 40rpx;
}

.no_address {
  font-size: 30rpx;
  color: #666;
  text-align: center;
  line-height: 1200rpx;
  background: #fff;
  position: fixed;
  bottom: 100rpx;
  width: 100%;
}

.addsite {
  background: #e4372e;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  bottom: 0;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  font-weight: bold;
}

.edit {
  right: 16rpx;
  font-size: 28rpx;
  color: #fff;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}