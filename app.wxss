/**app.wxss**/
view,
image,
text,
span,
navigator {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

view,
text,
input {
  font-family: PingFangSC-Light, helvetica, 'Heiti SC';
}

.clear:after {
  content: '';
  display: block;
  clear: both;
}

.clear {
  zoom: 1;
  clear: both;
}

.left {
  float: left;
}

.right {
  float: right;
}

.hide {
  display: none;
}

.show {
  display: block;
}

.overflow-hi {
  overflow: hidden;
}

.position-re {
  position: relative;
}

.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text-center {
  text-align: center;
}
.RMB {
  font-size: .24rpx;
  font-weight: normal;
  margin-right: 3rpx;
}
.red {
  color: #e4372e;
}
.panel_title {
  padding-left: 32rpx;
  border-left: 14rpx solid #e4372e;
  border-bottom: 2rpx solid #f7f7fa;
  background-color: #fff;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  color: #666;
}

.loadText {
  font-size: 24rpx;
  color: gray;
  padding: 30rpx 0;
  text-align: center;
}

.errAddress {
  font-size: 28rpx !important;
  color: #e4372e !important;
  font-weight: bold;
}